<div class="p-6">
  <div class="bg-white rounded-lg shadow-lg px-6 py-6 sm:p-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h2 class="text-2xl font-semibold text-gray-900">Companies</h2>
        <p class="mt-1 text-sm text-gray-600">List of Registered Companies</p>
      </div>
    </div>

    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
      <table class="divide-y divide-gray-200 table-auto" style="width: 80%;">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold">Name</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @companies.each do |company| %>
            <tr class="hover:bg-gray-50 transition-all duration-300 ease-in-out">
              <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900"><%= company.name.capitalize %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
