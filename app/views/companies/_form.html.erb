<div class="mb-4">
  <%= form.label :name, "Company Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
  <%= form.text_field :name, placeholder: "Enter company name", class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
</div>

<div class="flex justify-end space-x-3">
  <button type="button" class="px-4 py-2 rounded-lg bg-gray-300 text-gray-700 hover:bg-gray-400 transition">Cancel</button>
  <%= form.submit 'Save', class: 'px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition' %>
</div>
