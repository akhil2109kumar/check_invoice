<div id="check-capture-container" class="container mx-auto mt-4 p-4 flex justify-center">
  <div class="max-w-lg w-full">
    <div class="bg-white p-4 rounded shadow">
      <div class="flex flex-col items-center">
        <h2 class="text-xl font-semibold mb-4">Capture Image</h2>

        <div class="w-full relative">
          <div id="capture-interface" class="mb-4">
            <button id="start-camera-btn" type="button" class="w-full py-3 px-4 border border-gray-300 rounded-md text-lg font-semibold bg-blue-50 hover:bg-blue-100">
              Capture Image
            </button>
          </div>

          <div id="camera-container" class="hidden">
            <video id="camera-stream" class="w-full rounded-lg border border-gray-300" autoplay playsinline></video>
            <div class="mt-2 text-center">
              <button id="capture-btn" type="button" class="py-2 px-4 bg-red-500 text-white rounded-md hover:bg-red-600">
                Take Photo
              </button>
              <button id="cancel-btn" type="button" class="py-2 px-4 bg-gray-500 text-white rounded-md hover:bg-gray-600 ml-2">
                Cancel
              </button>
            </div>
          </div>

          <div id="image-preview" class="hidden">
            <div class="relative">
              <img id="preview-image" src="" class="w-full rounded-lg border border-gray-300" />
              <div class="absolute bottom-2 right-2">
                <button id="retake-btn" type="button" class="p-2 bg-gray-100 rounded-full shadow hover:bg-gray-200">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </button>
              </div>
            </div>
            <p class="text-center my-2 text-gray-500">Photo</p>
          </div>
        </div>
      </div>

      <%= form_with model: @check, url: process_capture_checks_path, method: :post, local: true, class: "mt-4" do |form| %>
        <%= form.hidden_field :image_data %>

        <div class="mb-4">
          <%= form.label :invoice_numbers, "Invoices", class: "block mb-1 font-medium" %>
          <%= form.text_field :invoice_numbers, class: "w-full p-2 border border-gray-300 rounded", onchange: "checkFormValidity()" %>
        </div>

        <div class="mb-4">
          <%= form.label :company_id, "Company", class: "block mb-1 font-medium" %>
          <%= form.collection_select :company_id, @companies, :id, :name,
              { prompt: "Select a company" },
              { class: "w-full p-2 border border-gray-300 rounded", onchange: "checkFormValidity()" } %>
        </div>

        <div class="mb-4">
          <%= form.label :number, "Check #", class: "block mb-1 font-medium" %>
          <%= form.text_field :number, class: "w-full p-2 border border-gray-300 rounded", onchange: "checkFormValidity()" %>

          <% if @check.errors[:number].any? %>
            <div class="text-red-500 text-sm mt-2">
              <%= @check.errors[:number].join(", ") %>
            </div>
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.hidden_field :invoice_ids, multiple: true %>
        </div>

        <div class="mt-6">
          <%= form.submit "Submit", id: "submit-btn", class: "w-full py-3 rounded font-semibold", disabled: true %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function checkFormValidity() {
    var invoiceNumbers = document.querySelector('input[name="check[invoice_numbers]"]').value;
    var company = document.querySelector('select[name="check[company_id]"]').value;
    var checkNumber = document.querySelector('input[name="check[number]"]').value;
    var imagedata = document.querySelector('input[name="check[image_data]"]').value;

    var submitBtn = document.getElementById('submit-btn');
    
    if (invoiceNumbers && company && checkNumber && imagedata) {
      submitBtn.disabled = false;
      submitBtn.className = "w-full py-3 bg-purple-600 rounded text-white font-semibold";
    } else {
      submitBtn.disabled = true;
      submitBtn.className = "w-full py-3 bg-gray-200 rounded text-gray-600 font-semibold";
    }
  }
  
  document.addEventListener('DOMContentLoaded', function() {
    checkFormValidity();
    
    document.querySelector('input[name="check[invoice_numbers]"]').addEventListener('input', checkFormValidity);
    document.querySelector('select[name="check[company_id]"]').addEventListener('input', checkFormValidity);
    document.querySelector('input[name="check[number]"]').addEventListener('input', checkFormValidity);
    document.querySelector('input[name="check[image_data]"]').addEventListener('input', checkFormValidity);

    document.getElementById('capture-btn').addEventListener('click', function() {
      var video = document.getElementById('camera-stream');
      var canvas = document.createElement('canvas');
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      var ctx = canvas.getContext('2d');
      ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
      var imageData = canvas.toDataURL('image/png');

      document.querySelector('input[name="check[image_data]"]').value = imageData;

      document.getElementById('camera-container').classList.add('hidden');
      document.getElementById('image-preview').classList.remove('hidden');
      document.getElementById('preview-image').src = imageData;

      checkFormValidity();
    });

    document.getElementById('retake-btn').addEventListener('click', function() {
      document.getElementById('image-preview').classList.add('hidden');
      document.getElementById('capture-btn').classList.remove('hidden');
      document.getElementById('camera-container').classList.remove('hidden');
      document.getElementById('start-camera-btn').classList.remove('hidden');
      document.querySelector('input[name="check[image_data]"]').value = '';
      checkFormValidity();
    });
  });
</script>
