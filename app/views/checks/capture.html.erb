<!-- app/views/checks/capture.html.erb -->
<div id="check-capture-container" class="container mx-auto mt-4 p-4">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bg-white p-4 rounded shadow">
      <div class="flex flex-col items-center">
        <h2 class="text-xl font-semibold mb-4">Capture Image</h2>
        
        <!-- Camera/Image Capture UI -->
        <div class="w-full relative">
          <!-- Main camera/capture interface -->
          <div id="capture-interface" class="mb-4">
            <div class="flex space-x-2 mb-4">
              <button id="start-camera-btn" type="button" class="flex-1 py-3 px-4 border border-gray-300 rounded-md text-lg font-semibold bg-blue-50 hover:bg-blue-100">
                Capture Image
              </button>
              
              <label for="file-input" class="flex-1 py-3 px-4 border border-gray-300 rounded-md text-lg font-semibold bg-green-50 hover:bg-green-100 text-center cursor-pointer">
                Upload Image
                <input id="file-input" type="file" accept="image/*" class="hidden" />
              </label>
            </div>
          </div>
          
          <!-- Camera stream (hidden initially) -->
          <div id="camera-container" class="hidden">
            <video id="camera-stream" class="w-full rounded-lg border border-gray-300" autoplay playsinline></video>
            <div class="mt-2 text-center">
              <button id="capture-btn" type="button" class="py-2 px-4 bg-red-500 text-white rounded-md hover:bg-red-600">
                Take Photo
              </button>
              <button id="cancel-btn" type="button" class="py-2 px-4 bg-gray-500 text-white rounded-md hover:bg-gray-600 ml-2">
                Cancel
              </button>
            </div>
          </div>
          
          <!-- Preview captured image (hidden initially) -->
          <div id="image-preview" class="hidden">
            <div class="relative">
              <img id="preview-image" src="" class="w-full rounded-lg border border-gray-300" />
              <div class="absolute bottom-2 right-2">
                <button id="retake-btn" type="button" class="p-2 bg-gray-100 rounded-full shadow hover:bg-gray-200">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </button>
              </div>
            </div>
            <p class="text-center my-2 text-gray-500">Photo</p>
          </div>
        </div>
      </div>
      
      <h2 class="text-xl font-semibold mt-6 mb-2">Invoices</h2>
      <div id="invoice-list" class="border border-gray-300 rounded p-2 min-h-16 mb-4">
        <!-- Invoices will be populated here dynamically -->
      </div>
      
      <!-- Company and Check Form -->
      <%= form_with model: @check, url: process_capture_checks_path, class: "mt-4", id: "check-form" do |form| %>
        <%= form.hidden_field :image_data %>
        
        <div class="mb-4">
          <%= form.label :company_id, "Company", class: "block mb-1 font-medium" %>
          <%= form.collection_select :company_id, @companies, :id, :name, 
              { prompt: "Select a company" }, 
              { class: "w-full p-2 border border-gray-300 rounded" } %>
        </div>
        
        <div class="mb-4">
          <%= form.label :number, "Check #", class: "block mb-1 font-medium" %>
          <%= form.text_field :number, class: "w-full p-2 border border-gray-300 rounded" %>
        </div>
        
        <div class="mb-4">
          <%= form.hidden_field :invoice_ids, multiple: true %>
        </div>
        
        <div class="mt-6">
          <%= form.submit "Submit", class: "w-full py-3 bg-gray-200 hover:bg-gray-300 rounded text-gray-800 font-semibold" %>
        </div>
      <% end %>
    </div>
    
    <!-- Right side panel for showing available invoices for selected company -->
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Available Invoices</h2>
      <div id="available-invoices" class="min-h-64 border border-gray-300 rounded p-2">
        <p class="text-gray-500 italic">Please select a company to see available invoices.</p>
      </div>
    </div>
  </div>
</div>
